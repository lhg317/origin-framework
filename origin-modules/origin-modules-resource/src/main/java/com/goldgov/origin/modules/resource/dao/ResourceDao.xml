<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goldgov.origin.modules.resource.dao.ResourceDao">

	<resultMap type="com.goldgov.origin.modules.resource.service.ResourceCategory" id="resourceCategory">
		<id column="CATEGORY_ID" jdbcType="INTEGER" property="categoryID"/>
		<result column="CATEGORY_NAME" jdbcType="VARCHAR" property="categoryName"/>
		<result column="DATA_PATH" jdbcType="VARCHAR" property="dataPath"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="description"/>
		<result column="RESOURCE_ID" jdbcType="VARCHAR" property="resourceID"/>
	</resultMap>
	
	<resultMap type="com.goldgov.origin.modules.resource.service.Resource" id="resource">
		<id column="RESOURCE_ID" jdbcType="INTEGER" property="resourceID"/>
		<result column="RESOURCE_NAME" jdbcType="VARCHAR" property="resourceName"/>
		<result column="RESOURCE_CODE" jdbcType="VARCHAR" property="resourceCode"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="description"/>
		<collection property="resourceOperateList" resultMap="resourceOperate"/>
	</resultMap>
	
	<resultMap type="com.goldgov.origin.modules.resource.service.ResourceOperate" id="resourceOperate">
		<id column="OPERATE_ID" jdbcType="INTEGER" property="operateID"/>
		<result column="OPERATE_NAME" jdbcType="VARCHAR" property="operateName"/>
		<result column="OPERATE_CODE" jdbcType="VARCHAR" property="code"/>
		<result column="OPERATE_TYPE" jdbcType="INTEGER" property="operateType"/>
	</resultMap>

	<sql id="categoryQueryFields">
		CATEGORY_ID as "categoryID",
		CATEGORY_NAME as "categoryName",
		DATA_PATH as "dataPath",
		DESCRIPTION as "description",
		RESOURCE_ID as "resourceID"
	</sql>
	
	<sql id="resourceQueryFields">
		ROLE_ID as "entityID",
		ROLE_NAME as "name",
		ROLE_CODE as "code",
		ROLE_TYPE as "type",
		IS_ENABLE as "isEnable",
		DESCRIPTION as "description"
	</sql>
	
	
	<insert id="addResource">
		<selectKey keyProperty="entityID" resultType="String" order="BEFORE">
		    select uuid() from dual
		</selectKey>
		insert into role (ROLE_ID,ROLE_NAME,ROLE_CODE,ROLE_TYPE,IS_ENABLE,DESCRIPTION)value(#{entityID,jdbcType=VARCHAR},#{name},#{code},#{type},#{isEnable},#{description});
	</insert>
	
	<delete id="deleteResourceByIds">
		delete from role where ROLE_ID in
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
		   #{id}
		</foreach>
	</delete>
	
	<update id="updateResource">
		update role 
		<set>
			<if test="name != null">ROLE_NAME = #{name},</if>
			<if test="code != null">ROLE_CODE = #{code},</if>
			<if test="type != null">ROLE_TYPE = #{type},</if>
			<if test="isEnable != null">IS_ENABLE = #{isEnable},</if>
			<if test="description != null">DESCRIPTION = #{description},</if>
		</set>
		where ROLE_ID = #{id}
	</update>
	
	<select id="findResourceById" resultMap="resource">
		select <include refid="queryFields" /> from role where ROLE_ID=#{id}
	</select>
	
	<select id="findResourceList" resultMap="resource">
		select <include refid="queryFields" /> from role
		<where>
			<if test="params.searchName != null">
				USER_NAME like '%${params.searchName}%'
			</if>
		</where>
		
		<!-- <if test="first >= 0">
			limit #{param2,jdbcType=INTEGER}
		</if>
		<if test="first >= 0 and maxResult >= 0">
			, #{param3,jdbcType=INTEGER}
		</if> -->
	</select>
	
</mapper>