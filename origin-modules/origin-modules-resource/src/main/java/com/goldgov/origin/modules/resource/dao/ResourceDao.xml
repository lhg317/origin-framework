<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goldgov.origin.modules.resource.dao.ResourceDao">

	<resultMap type="com.goldgov.origin.modules.resource.service.ResourceCategory" id="resourceCategory">
		<id column="CATEGORY_ID" jdbcType="INTEGER" property="categoryID"/>
		<result column="CATEGORY_NAME" jdbcType="VARCHAR" property="categoryName"/>
		<result column="DATA_PATH" jdbcType="VARCHAR" property="dataPath"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="description"/>
		<result column="RESOURCE_ID" jdbcType="VARCHAR" property="resourceID"/>
	</resultMap>
	
	<resultMap type="com.goldgov.origin.modules.resource.service.Resource" id="resource">
		<id column="RESOURCE_ID" jdbcType="INTEGER" property="resourceID"/>
		<result column="RESOURCE_NAME" jdbcType="VARCHAR" property="resourceName"/>
		<result column="RESOURCE_CODE" jdbcType="VARCHAR" property="resourceCode"/>
		<collection property="resourceOperateList" resultMap="resourceOperate"/>
	</resultMap>
	
	<resultMap type="com.goldgov.origin.modules.resource.service.ResourceOperate" id="operate">
		<id column="OPERATE_ID" jdbcType="INTEGER" property="operateID"/>
		<result column="OPERATE_NAME" jdbcType="VARCHAR" property="operateName"/>
		<result column="OPERATE_CODE" jdbcType="VARCHAR" property="operateCode"/>
		<result column="OPERATE_TYPE" jdbcType="INTEGER" property="operateType"/>
	</resultMap>

	<sql id="categoryQueryFields">
		CATEGORY_ID as "categoryID",
		CATEGORY_NAME as "categoryName",
		DATA_PATH as "dataPath",
		DESCRIPTION as "description",
		RESOURCE_ID as "resourceID"
	</sql>
	
	<sql id="resourceQueryFields">
		RESOURCE_ID as "resourceID",
		RESOURCE_NAME as "resourceName",
		RESOURCE_CODE as "resourceCode"
	</sql>
	
	<sql id="operateQueryFields">
		OPERATE_ID as "operateID",
		OPERATE_NAME as "operateName",
		OPERATE_CODE as "operateCode",
		OPERATE_TYPE as "operateType"
	</sql>
	
	<insert id="addCategory">
		insert into RESOURCE_CATEGORY (CATEGORY_ID,CATEGORY_NAME,DATA_PATH,DESCRIPTION,PARENT_ID)value(#{categoryID},#{categoryName},#{dataPath},#{description},#{parentID});
	</insert>
	
	<insert id="addResource">
		insert into RESOURCE (RESOURCE_ID,RESOURCE_NAME,RESOURCE_CODE,CATEGORY_ID)value(#{resourceID},#{resourceName},#{resourceCode},#{categoryID});
	</insert>
	
	<insert id="addOperate">
		insert into RESOURCE_OPERATE (OPERATE_ID,OPERATE_NAME,OPERATE_CODE,OPERATE_TYPE)value(#{operateID},#{operateName},#{operateCode},#{operateType});
	</insert>
	
	<delete id="deleteCategory">
		delete from RESOURCE_CATEGORY where CATEGORY_ID in
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
		   #{id}
		</foreach>
	</delete>
	
	<delete id="deleteResource">
		delete from RESOURCE where RESOURCE_ID in
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
		   #{id}
		</foreach>
	</delete>
	
	<update id="updateResourceCategory">
		update RESOURCE_CATEGORY 
		<set>
			<if test="CATEGORY_NAME != null">CATEGORY_NAME = #{categoryName},</if>
			<if test="DATA_PATH != null">RESOURCE_CODE = #{dataPath},</if>
			<if test="DESCRIPTION != null">DESCRIPTION = #{description},</if>
			<if test="RESOURCE_ID != null">RESOURCE_ID = #{resourceID},</if>
		</set>
		where CATEGORY_ID = #{id}
	</update>
	
	<update id="updateResource">
		update RESOURCE 
		<set>
			<if test="resourceName != null">RESOURCE_NAME = #{resourceName},</if>
			<if test="resourceCode != null">RESOURCE_CODE = #{resourceCode},</if>
		</set>
		where RESOURCE_ID = #{id}
	</update>
	
	<select id="findResourceCategory" resultMap="resourceCategory">
		select <include refid="categoryQueryFields" /> from RESOURCE where RESOURCE_ID=#{id}
	</select>
	
	<select id="findResourceCategoryList" resultMap="resourceCategory">
		select <include refid="categoryQueryFields" /> from RESOURCE_CATEGORY
	</select>
	
	<select id="findResource" resultMap="resource">
		select <include refid="resourceQueryFields" /> from RESOURCE where RESOURCE_ID=#{id}
	</select>
	
	<select id="findResourceList" resultMap="resource">
		select <include refid="resourceQueryFields" /> from RESOURCE
	</select>
	
</mapper>