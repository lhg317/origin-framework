<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goldgov.origin.modules.role.dao.RoleDao">

	<resultMap type="com.goldgov.origin.modules.role.service.Role" id="role">
		<id column="ROLE_ID" jdbcType="INTEGER" property="roleID"/>
		<result column="ROLE_NAME" jdbcType="VARCHAR" property="roleName"/>
		<result column="ROLE_CODE" jdbcType="VARCHAR" property="roleCode"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="description"/>
	</resultMap>
	
	<resultMap type="com.goldgov.origin.modules.role.service.RoleResource" id="roleResource">
		<id column="ROLE_RESOURCE_ID" jdbcType="INTEGER" property="roleResourceID"/>
		<result column="OPERATE_ID" jdbcType="INTEGER" property="operateID"/>
		<result column="ROLE_ID" jdbcType="INTEGER" property="roleID"/>
	</resultMap>
	
	<resultMap type="com.goldgov.origin.modules.role.service.RoleObject" id="roleObject">
		<id column="ROLE_OBJECT_ID" jdbcType="INTEGER" property="roleObjectID"/>
		<result column="OBJECT_ID" jdbcType="INTEGER" property="objectID"/>
		<result column="ROLE_ID" jdbcType="INTEGER" property="role_ID"/>
	</resultMap>

	<sql id="queryFields">
		ROLE_ID as "roleID",
		ROLE_NAME as "roleName",
		ROLE_CODE as "roleCode",
		DESCRIPTION as "description"
	</sql>
	
	<sql id="queryFields">
		ROLE_RESOURCE_ID as "roleResourceID",
		ROLE_CODE as "roleCode",
		OPERATE_ID as "operateID"
	</sql>
	
	<insert id="addRole">
		<selectKey keyProperty="entityID" resultType="String" order="BEFORE">
		    select uuid() from dual
		</selectKey>
		insert into role (ROLE_ID,OPERATE_ID,ROLE_CODE,DESCRIPTION)value(#{roleID},#{name},#{code},#{description});
	</insert>
	
	<insert id="addRoleResource">
		<selectKey keyProperty="entityID" resultType="String" order="BEFORE">
		    select uuid() from dual
		</selectKey>
		insert into role_resource (ROLE_RESOURCE_ID,OPERATE_ID,ROLE_ID)value(#{roleResourceID},#{operate},#{roleID});
	</insert>
	
	<delete id="deleteRoleByIds">
		delete from role where ROLE_ID in
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
		   #{id}
		</foreach>
	</delete>
	
	<update id="updateRole">
		update role 
		<set>
			<if test="name != null">ROLE_NAME = #{name},</if>
			<if test="code != null">ROLE_CODE = #{code},</if>
			<if test="description != null">DESCRIPTION = #{description},</if>
		</set>
		where ROLE_ID = #{roleID}
	</update>
	
	<select id="findRole" resultMap="role">
		select <include refid="queryFields" /> from role where ROLE_ID=#{roleID}
	</select>
	
	<select id="findRoleListByPage" resultMap="role">
		select <include refid="queryFields" /> from role
	</select>
	
</mapper>